<h1>Consumos do dia <%= @dia %></h1>

<table>
  <tr>
    <th>Produto</th>
    <th>Quantidade</th>
    <th></th>
  </tr>

<% @consumos.each do |consumo| %>
  <tr>
    <td><%= Produto.find(consumo.produto_id).nome %></td>
    <td><%= consumo.quantidade %></td>
    <td></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Voltar', contador_path %>
