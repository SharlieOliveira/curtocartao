<%= form_tag(confirma_consumo_path(@cliente), :id => 'Confirmar') do %>
<div class="row-fluid" style="padding-top: 60px;">
      <table class="table">
        <thead>
          <tr>
            <th> Produto </th>
            <th> Quantidade </th>
            <th> Produto </th>
            <th> Quantidade </th>
          </tr>
        </thead>
        <tbody>
        <% @produtos.in_groups_of(2, false).each do |prods| %>
          <tr>
          <% prods.each do |produto|%>
              <td> <%= produto.nome%>  <%= number_to_currency(produto.preco, :separator => ',', :precision => 2, :unit => 'R$') %>
              </td>
              <td> 
                <select class="span8" id="prodcount-<%=produto.id%>" name="consumo[<%=produto.id%>]">
                  <% (0..20).each do |n|%>
                    <option> <%= n %> </option>
                  <% end %>
                </select>
                <div class="btn-group">

                  <button role="button" class="btn" onClick="javascript:decProd(event, '<%= produto.id %>');"> - </button>
                  <button role="button" class="btn" onClick="javascript:incProd(event, '<%= produto.id %>');"> + </button>
                </div>
              </td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>
<div class="row-fluid">
<div class="form-actions" style="text-align: center;">
  <%= link_to 'Cancelar', consumo_path, 'data-icon' => 'arrow-l', 'role' => 'button', 'class' => 'btn'%>
  <button type="submit" class="btn btn-primary">Enviar</button>
</div>
</div>
<% end %>


<%= form_tag(confirma_recarga_contrib_path(@cliente), :id => 'Confirmar') do %>
<div id="modalRecarga" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p> Valor da recarga
                <div class="input-prepend input-append">
                  <span class="add-on">$</span>
                  <input class="span4" id="appendedPrependedInput" 
                    type="text" placeholder="00" 
                    name="valor_recarga">
                  <span class="add-on">.00</span>
                </div>
    </p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancelar</a>
    <button type="submit" class="btn btn-primary">Efetuar Recarga</button>
  </div>
</div>

<script>
var incProd = function (e, prod_id) {
  e.preventDefault();
  var divname = "#prodcount-"+prod_id;
  var count = parseInt($(divname).val()) + 1;
  if ( count <= 20 ) {
    $(divname).val(count);
  }
};
var decProd = function (e, prod_id) {
  e.preventDefault();
  var divname = "#prodcount-"+prod_id;
  var count = parseInt($(divname).val()) - 1;
  if ( count >= 0 ) {
    $(divname).val(count);
  }
};
</script>
<% end %>
